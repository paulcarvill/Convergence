<script>
  var myEvents = [];

   <% @events.each do |event| %>
    var event = {
       id          : '<%= event.id %>',
       title       : '<%= event.name %>',
       start       : "<%= event.start_at %>",
       end         : "<%= event.end_at %>",
       allDay      : <%= event.all_day %>,
       editable    : false
      };
      myEvents.push(event);
    <% end %>

</script>

