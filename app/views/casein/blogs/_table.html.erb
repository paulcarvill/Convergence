<!-- Scaffolding generated by Casein v5.0.1.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Body", :body %></th>
			<th>Category</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% blogs.each do |blog| %>
		<tr>
			<td><%= casein_table_cell_link blog.title, casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.body, casein_blog_path(blog) %></td>
			<td>
				<% if blog.category %>
				<%= casein_table_cell_link blog.category.name, casein_blog_path(blog) %>
				<% end %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_blog_path(blog), :method => :delete, :data => { :confirm => "Are you sure you want to delete this blog?" }) %>
			</td>
		</tr>
	<% end %>
</table>