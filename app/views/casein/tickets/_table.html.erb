<!-- Scaffolding generated by Casein v5.0.1.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Url", :url %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% tickets.each do |ticket| %>
		<tr>
			<td><%= casein_table_cell_link ticket.name, casein_ticket_path(ticket) %></td>
			<td><%= casein_table_cell_link ticket.url, casein_ticket_path(ticket) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_ticket_path(ticket), :method => :delete, :data => { :confirm => "Are you sure you want to delete this ticket?" }) %>
			</td>
		</tr>
	<% end %>
</table>