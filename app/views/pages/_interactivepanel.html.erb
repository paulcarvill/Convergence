<% @events.each_with_index do |event, i| %>
<div class="splash initialHide" style="background-image: url(<%=eventImage(event)%>);">
	<div class="splash-inner">
		<div>
			<h1><%= event.name %></h1>
			<h2><%= event.details %></h2>
			<% if event.tickets %>
			<span style="display: none;"><a href="/events/<%= event.slug %>" class="buy">Buy tickets</a></span>
			<% end %>
		</div>
	</div>
</div>  
<% end %>