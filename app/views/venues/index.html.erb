<% content_for :js do %>
<script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC13-_qtL6-tYNJIu_ofEOTT8OeC3q7Uk8">
    </script>

    <script type="text/javascript">

    var styles = [
      {
        "stylers": [
          { "saturation": -100 },
          { "gamma": 0.43 }
        ]
      }
    ]

    var styledMap = new google.maps.StyledMapType(styles, {name: "Styled Map"});

    function initialize() {
      var mapOptions = {
        center: { lat: 51.523555, lng: -0.078709},
        zoom: 18,
        scrollwheel: false
      };
      var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
      var bounds = new google.maps.LatLngBounds();

      map.mapTypes.set('map_style', styledMap);
      map.setMapTypeId('map_style');
      var infowindow;

      <% @venues.each do |venue| %>

        var myLatlng = new google.maps.LatLng(<%= venue.location %>);
        var marker = new google.maps.Marker({
          position: myLatlng,
          map: map,
          title:"<%= venue.name %>",
        });
        bounds.extend(marker.position);
        
        google.maps.event.addListener(marker, 'click', function() {
          if (infowindow) {
            infowindow.close();
          }
          infowindow = new google.maps.InfoWindow( { content: '<p><%= venue.name %></p><a href="/events">go to events</a>', maxWidth: 400 , maxHeight: 200 });
          infowindow.open(map, this);
        });

      <% end %>

      map.fitBounds(bounds);
    }
    
    google.maps.event.addDomListener(window, 'load', initialize);

    </script>
<% end %>

